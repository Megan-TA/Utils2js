{
    "compilerOptions": {
        "outDir": "es6",
        "allowJs": true,
        "target": "es6",
        "removeComments": true
    },
    "include": [
        "src/**/*",
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "plugins": [
        {
            "name": "esdoc-typescript-plugin", 
            "option": {
                "enable": true
            }
        }
    ]
}